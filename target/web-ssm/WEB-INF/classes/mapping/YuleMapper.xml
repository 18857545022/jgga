<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="ssm.model.YuleMapper">
    <insert id="save"  parameterType="ssm.pojo.Yule" >
        INSERT INTO yule
         VALUES
            	(
            		#{id},
            		#{cjsj},
            		#{xm},
            		#{zjhm},
            		#{zz},
            		#{xb},
            		#{mz},
            		#{csrq},
            		#{zjlx},
            		#{jg},
            		#{type},
            		#{cydz},
            		#{lastRzsj},
            		#{lastLgmc},
            		#{lastLgbm},
            		#{lastFh},
            		#{count},
            		#{message}
            	)
    </insert>

	<select id="findZjAndCount_update" resultType="ssm.pojo.ZjAndCount">
		select zjhm,count(1) as count
		FROM yule
		where last_rzsj BETWEEN SUBDATE(SYSDATE(),INTERVAL #{param1} hour) and SYSDATE()
		group by zjhm
	</select>

	<select id="find_history" resultType="ssm.pojo.ZjAndCount">
		select zjhm,count(1) as count
		FROM yule
		where last_rzsj BETWEEN SUBDATE(SYSDATE(),INTERVAL ${param1} month) and SYSDATE()
		group by zjhm
	</select>

	<select id="findByZjhm" resultType="ssm.pojo.Yule"  parameterType="string">
		select *
		FROM yule
		where zjhm=#{zjhm}
	</select>


</mapper>